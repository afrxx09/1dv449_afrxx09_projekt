<form method="get" action="/search" class="form-horizontal">
	<div class="form-group">
		<div class="col-md-2 text-right">
			<label for="beer_search" class="control-label"><h3 style="margin:0;">Beer search</h3></label>
		</div>
		<div class="col-md-6">
			<input id="beer_search" class="form-control" type="text" name="beer_search" placeholder="Beer search" value="<%= (beer_search) ? beer_search : '' %>" autofocus />
		</div>
		<div class="col-md-3">
			<button class="btn btn-primary btn-block" type="submit">Search</button>
		</div>
	</div>
</form>